{
  "name": "wishlist-api",
  "version": "1.0.0",
  "description": "A REST API for managing wishlists using Hexagonal Architecture and DDD",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "vercel-build": "tsc",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "wishlist",
    "api",
    "rest",
    "graphql",
    "hexagonal-architecture",
    "ddd",
    "solid"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "graphql-http": "^1.22.0",
    "graphql": "^16.8.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
